source 'http://rubygems.org'

gem 'sinatra'
gem 'sinatra-reloader'

gem 'haml'
gem 'sass'
gem 'coffee-script'
gem 'sprockets'

gem 'supermodel'

gem 'vagrant'

gem 'thin'
gem 'private_pub'

gem 'pry'

group :development, :test do
=begin
  gem 'rspec'
  gem 'rack-test'

  # for end to end test
  gem 'capybara'

  # for running test automatically
  # $ guard init rspec
  # $ bundle exec guard
  gem 'guard-rspec'

  # for guard notification. (mac os)
  # "growl" is found app store.
  # and "growlnotify" is found http://growl.cachefly.net/GrowlNotify-1.3.zip
  gem 'ruby_gntp'
  gem 'rb-fsevent'

  # for speed-up test
  # $ spork --bootstrap
  # $ vi spec/spec_helper.rb
  # -> move all procedures to Spork.prefork block.
  # $ spork
  gem 'spork', '>= 0.9.0.rc2'
  gem 'guard-spork'

  # coverage tool
  # $ vi spec/spec_helper.rb
  #   unless ENV['DRB']
  #     require 'simplecov'
  #     SimpleCov.start
  #   end
  # $ bundle exec rspec spec/
  # $ open -a Google\ Chrome coverage/index.html
  gem 'simplecov', :require => false, :group => :test
=end
end

